.theme-list-group {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: row;
  justify-content: center;
}
.themes-item-box {
  position: relative;
  justify-content: center;
}
.item-title {
  position: relative;
  display: flex;
  flex-direction: row; 
  justify-content: center;
  border: solid #fff;
}
.theme_title {
  color: #f2f;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  font-size: 22px;
}