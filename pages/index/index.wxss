/* pages/index/index.wxss */
.theme-list-group {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: row;
  justify-content: center;
}
.themes-item-box {
  position: relative;
  justify-content: center;
}
.item-title {
  position: relative;
  display: flex;
  flex-direction: row; 
  justify-content: center;
  border-bottom: 1px solid #ECECEC;
  margin-bottom: 1%;
}
.theme_title {
  color: #A01111;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  font-size: 22px;
  margin: 3%;
}
.item-content {
  display: inline-block;
  width: 49%;
  margin: 0 0.5%
}
.item-content-view {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 1%;
}
.item-content-image {
  width: 100%;
  height: 280rpx;
  margin: 3%;
  border-radius: 10px;
  /*border:  1px #E0E0E0;*/
  box-shadow: 2px 2px 2px #505050;
}