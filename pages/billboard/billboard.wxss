/* pages/billboard/billboard.wxss */
.main {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title-swiper {
  position: relative;
  width: 100%;
  height: 26%;
}
.title-image {
    position: relative;
    width: 100%;
    height: 100%;
}

.container {
  position: relative;
  width: 100%;
  background-color: rgb(233,233,233);
}

.split-title-view {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;  /*主轴等分对齐*/
  align-items: center;     /*侧轴居中*/
  margin-top: 3%;
  margin-bottom: 3%;
}
.split-title {
  font-size: 16px;
  color: #CC1100;
}
.split-title-hr-view-container {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex: 1 1 auto;       /*子元素撑开剩余区域*/
}
.split-title-hr-view {
  position: relative;
  width: 100%;
  height: 3rpx;
  background-color: rgb(177,177,177);
  margin-left: 6%;
  margin-right: 6%;
  box-shadow: 0px 1px 0px rgba(255,255,255,10);
}

.items-container {
  position: relative;
  width: 100%;
}
.item-content {
  position: relative;
  width: 48%;
  display: inline-block;
  margin: 1%;
}
.item-content-view {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.item-content-image {
  width: 100%;
  height: 280rpx;
  margin: 3%;
  border-radius: 10px;
  box-shadow: 2px 2px 2px #505050;
}