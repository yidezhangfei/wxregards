/* templates/pages/special.wxss */
@import 'yurenjiezhufu.wxss';
@import 'shuangbeifuqi.wxss';
@import 'sanyangkaitai.wxss';

.main {
  position: absolute;
  display: flex;
  width: 100%;
  height: auto;
  background-color: #000;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 0 0;
  box-sizing: border-box;
}

.dahua-view {
  position: relative;
  display: flex;
  width: 100%;
  margin-bottom: -40rpx;
}
.dahua {
  width: 100%;
  height: 300rpx;
}

.maozi-view {
  position: relative;
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-bottom: -10%;
  z-index: 100;
}
.maozi {
  width: 40%;
}

.touxiang-view {
  position: relative;
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.userinfo-avatar {
  width: 130rpx;
}
.circle {
  border-radius: 50%;
}

.userinfo-nickname-view {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin: 3%;
  margin-top: 5%;
}
.userinfo-nickname {
  color: #FF0000;
  background-color: yellow;
  font-size: 48rpx;
  padding-left: 4%;
  padding-right: 4%;
  margin-left: 1%;
  margin-right: 1%;
}
.userinfo-nickname-before {
  color: yellow;
}
.userinfo-nickname-after {
  color: yellow;
}

#fanchuan {
  margin-bottom: 5%; 
}

.textArray0 {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 20px;
  letter-spacing: 2px;
  text-align: center;
  font-weight: bold;
}

.textArray1 {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 20px;
  letter-spacing: 2px;
  text-align: center;
  font-weight: bold;
}

.textArray2 {
  display: flex;
  flex-direction: row;
  font-size: 20px;
  font-weight: bold;
}
.small {
  width: 10%;
}

.generate_view {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 20%;
  margin-bottom: 20%;
}
.generate_button {
  padding-left: 10%;
  padding-right: 10%;
  font-size: 14px;
}

.xingxingband_image {
  position: relative;
  width: 80%;
  overflow: hidden;
}